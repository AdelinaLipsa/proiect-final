doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge') 
  title Pixel Art Maker!
  link(rel='stylesheet' href='style.css')
.container
  div
    a.foo
      button Save as PNG
    a.secondFoo
      button Save as JPEG
    a.thirdFoo
      button Save as GIF
  .grid-div
    table#my-node
    // the left menu
    .sidebar
      .left-div
      h2.left-menu.title Pixel Art Maker
      .left-menu
        h2.title Choose Grid Size
        input.eight(type='submit' value='8 x 8')
        input.twelve(type='submit' value='12 x 12')
        input.sixteen(type='submit' value='16 x 16')
        input.thirtytwo(type='submit' value='32 x 32')
      .left-menu.grid-menu
        | Grid Color
        br
        input#grid-color(type='color')
        #remove-grid.button Remove Grid
      // the right menu
      .right-div
        .right-menu
          | Tools
          br
          img#paint-brush.tool-selected(src='data:image/svg+xml;base64,')
          img#paint-bucket(src='data:image/svg+xml;base64,')
          br
          img#eye-dropper(src='data:image/svg+xml;base64,')
          img#eraser(src='data:image/svg+xml;base64,')

        .right-menu
          | Picked Color
          br
          input#colorPicker(type='color')
        .right-menu
          | Color palette
          br
          #sample-grape.sample
          #sample-brown.sample
          #sample-khaki.sample
          br
          #sample-burlywood.sample
          #sample-sunny.sample
          #sample-discoball.sample
          br
          #sample-bluejeans.sample
          #sample-blueeyes.sample
          #sample-blue.sample
          br
          #sample-rose.sample
          #sample-mist.sample
          #sample-thistle.sample
          br
          #sample-tuscany.sample
          #sample-shadow.sample
          #sample-arsenic.sample
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
  script(src='https://cdn.bootcss.com/FileSaver.js/2014-11-29/FileSaver.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js')
  script(src='script.js')
